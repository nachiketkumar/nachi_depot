<h1>Listing products</h1>

<table class="table table-striped table-bordered">
<% @products.each do |product| %>
  <tr class = "<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(product.image_url, class: 'list_image') %>
    </td>

    <td class = "list_description">
      <dl>
        <dt><%= product.title %></dt>
        <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
      </dl>
    </td>

    <td class = "list_actions">
      <%= link_to product, class: "btn btn-block" do %>
        <i class="icon-eye-open"></i> Show
      <% end %>

      <%= link_to raw('<i class="icon-pencil"></i> Edit'), edit_product_path(product), class: "btn btn-block" %>
      <%= link_to raw('<i class="icon-fire icon-white"></i> Destroy'), product, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-warning btn-block" %>
    </td>
  </tr>
  <% end %>
</table>

<br>

<%= link_to raw('<i class="icon-plus-sign icon-white"></i> New Product'), new_product_path, class: "btn btn-primary" %>
